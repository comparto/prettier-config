    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "typescript": "^3.9.5"
  },
  "files": [
    "src"
